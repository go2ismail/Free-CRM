@page
@{
    Layout = "~/FrontEnd/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Home page";
}

<div class="lock-overlay">
    <h1 class="lock-welcome">FREE CRM</h1>

    <div class="lock-buttons">
        <!-- Login -->
        <a asp-area="" asp-page="/Accounts/Login" class="lock-login">
            <i class="fas fa-lock lock-icon"></i>
        </a>

        <!-- Reset -->
        <a asp-area="" asp-page="/Datas/Reset" class="lock-reset">
            <i class="fas fa-sync-alt lock-icon"></i>
        </a>

        <!-- CSV Form -->
        <a asp-area="" asp-page="/Csv/CsvForm" class="lock-csv">
            <i class="fas fa-file-csv lock-icon"></i>
        </a>

        <!-- Generate Data -->
        <a asp-area="" asp-page="/Datas/Generate" class="lock-generate">
            <i class="fas fa-cogs lock-icon"></i>
        </a>

        <!-- Export CSV -->
        <a asp-area="" asp-page="/Csv/CsvExport" class="lock-export-csv">
            <i class="fas fa-file-export lock-icon"></i>
        </a>
    </div>
</div>
